<?xml version="1.0" ?>
<endurox>
    <appconfig>
        <sanity>5</sanity>
        <brrefresh>6</brrefresh>
        <restart_min>1</restart_min>
        <restart_step>1</restart_step>
        <restart_max>5</restart_max>
        <restart_to_check>20</restart_to_check>
        <gather_pq_stats>Y</gather_pq_stats>
    </appconfig>
    <defaults>
        <min>1</min>
        <max>2</max>
        <autokill>1</autokill>
        <start_max>2</start_max>
        <pingtime>10</pingtime>
        <ping_max>40</ping_max>
        <end_max>30</end_max>
        <killtime>1</killtime>
        
        <envs group="QTEST">
            <env name="NDRX_XA_RES_ID">2</env>
            <env name="NDRX_XA_OPEN_STR">${NDRX_APPHOME}/QTEST</env>
            <env name="NDRX_XA_CLOSE_STR">${NDRX_APPHOME}/QTEST</env>
            <env name="NDRX_XA_DRIVERLIB">libndrxxaqdisks.${NDRX_LIBEXT}</env>
            <env name="NDRX_XA_RMLIB">libndrxxaqdisk.${NDRX_LIBEXT}</env>
            <env name="NDRX_XA_LAZY_INIT">0</env>
        </envs>
    </defaults>
    <servers>
        <server name="jserver01">
            <srvid>1</srvid>
            <min>1</min>
            <max>1</max>
            <sysopt>-e ${NDRX_APPHOME}/log/JAVA -r</sysopt>
            <!-- If Xss missing, then C side stack gets overflown and core dump is generated 
            <cmdline>java -Xss10M -cp ${NDRX_APPHOME}/src/server/${NDRX_SVPROCNAME}.jar:${NDRX_APPHOME}/../../libsrc/enduroxjava.jar JServer01 ${NDRX_SVCLOPT}</cmdline>
-->
            <cmdline>java -Xss10M -XX:MinHeapFreeRatio=5 -XX:MaxHeapFreeRatio=20 -cp ${NDRX_APPHOME}/src/server/${NDRX_SVPROCNAME}.jar:${NDRX_APPHOME}/../../libsrc/enduroxjava.jar JServer01</cmdline>
        </server>
	<server name="jserver01_2b">
            <srvid>100</srvid>
            <min>1</min>
            <max>1</max>
            <sysopt>-e ${NDRX_APPHOME}/log/JSERVER01_2B -r</sysopt>
        </server>
        
        <!-- Configure queue server -->
        
        <server name="tmsrv">
            <max>1</max>
            <srvid>200</srvid>
            <envs>
                <usegroup>QTEST</usegroup>
            </envs>
            <sysopt>-e ${NDRX_APPHOME}/log/tmsrv-dom1.log -r -- -t1 -l${TESTDIR}/RM1</sysopt>
        </server>
        
        <server name="tmqueue">
            <max>1</max>
            <srvid>300</srvid>
            <envs>
                <usegroup>QTEST</usegroup>
            </envs>
            <sysopt>-e ${NDRX_APPHOME}/log/tmqueue-dom1.log -r -- -m MYSPACE -s1</sysopt>
        </server>
        
    </servers>
</endurox>


